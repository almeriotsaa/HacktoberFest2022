package oop;

import java.util.Scanner;

public class Suhu {

    static void tentukanSuhu(int suhu){
        if(suhu > 28){
            System.out.println("Panas");
        } else if(suhu > 5){
            System.out.println("Normal");
        } else{
            System.out.println("Dingin");
        }
    }

