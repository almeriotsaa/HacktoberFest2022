    static String translateWarna(String warna){
        System.out.println(warna);
        if(warna == "kuning"){
            return "yellow";
        } else if(warna == "biru"){
            return "blue";
        } else if(warna == "hitam"){
            return "black";
        } else {
            return "Tidak ada warna sesuai";
        }
    }

    public static void main(String[] args){
        Scanner input = new Scanner(System.in);

//        String namaBesar = hurufBesar();
